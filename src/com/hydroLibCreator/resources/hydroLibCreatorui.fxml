<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.111" fx:controller="com.hydroLibCreator.applicationController.Controller">

    <padding><Insets bottom="10" left="25" right="25" top="25" /></padding>

    <children>
        <Label text="Folder" GridPane.columnIndex="1" GridPane.rowIndex="2" />
        <TextField fx:id="directoryName" promptText="select file to convert" GridPane.columnIndex="3" GridPane.rowIndex="2" editable="false" />
        <Button id="selectFile" mnemonicParsing="false" onAction="#handleSelectButtonAction" text="Select" GridPane.columnIndex="4" GridPane.rowIndex="2" />
        <Label text="Name" GridPane.columnIndex="1" GridPane.rowIndex="5" />
        <TextField fx:id="name" promptText="library name" GridPane.columnIndex="3" GridPane.rowIndex="5" />
        <Label text="Author" GridPane.columnIndex="1" GridPane.rowIndex="6" />
        <TextField fx:id="author" promptText="author name" GridPane.columnIndex="3" GridPane.rowIndex="6" />
        <Label text="Info" GridPane.columnIndex="1" GridPane.rowIndex="7" />
        <TextField fx:id="info" promptText="describe library" GridPane.columnIndex="3" GridPane.rowIndex="7" />
        <Label text="License" GridPane.columnIndex="1" GridPane.rowIndex="8" />
        <TextField fx:id="license" promptText="license details" GridPane.columnIndex="3" GridPane.rowIndex="8" />
        <Button id="selectFile" mnemonicParsing="false" onAction="#handleConveretButtonAction" text="Convert" GridPane.columnIndex="4" GridPane.rowIndex="9" />
        <Label alignment="TOP_CENTER" text="Welcome, select a folder to convert" GridPane.columnIndex="3" wrapText="true"/>
      <Label fx:id="fullpath" GridPane.columnIndex="3" GridPane.rowIndex="3"  />
    </children>

</GridPane>
